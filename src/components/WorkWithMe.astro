---
import BentoBoxLayout from "../layouts/BentoBoxLayout.astro";
---

<BentoBoxLayout>
  <h2 class="text-2xl">Let's start working together!</h2>

  <p class="my-2">
    <i class="fa-light fa-paper-plane-top"></i>
    Send me a message
  </p>

  <h3 class="text-xl">Socials</h3>
